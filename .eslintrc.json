{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/function-component-definition": [1, {
            "namedComponents": "arrow-function",
            "unnamedComponents": "arrow-function"
            }],
        "linebreak-style":"off",
        "no-console":"off",
        "padded-blocks":"off",
        "arrow-body-style": "off"
    }
}
